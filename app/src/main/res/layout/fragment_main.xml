<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:text="@string/fragment_main_incomes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                tools:text="200 000"
                android:id="@+id/tvFragmentMainIncomes"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/fragment_main_tv_large_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:text="@string/fragment_main_costs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                tools:text="2000"
                android:id="@+id/tvFragmentMainCosts"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/fragment_main_tv_large_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="@string/fragment_main_remaining_amount"
        android:paddingTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="20 000"
        android:id="@+id/tvFragmentMainRemaining"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/fragment_main_tv_remaining_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>